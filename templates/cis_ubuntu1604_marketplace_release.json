{
  "variables": {
    "organization": "{{env `ORGANIZATION`}}",
    "os": "{{env `OS`}}",
    "build_region": "{{env `BUILD_REGION`}}",
    "instance_type": "{{env `INSTANCE_TYPE`}}",
    "deploy_regions": "{{env `DEPLOY_REGIONS`}}",
    "aws_accounts": "{{env `AWS_ACCOUNTS`}}",
    "source_version": "{{env `SOURCE_VERSION`}}",
    "build": "{{env `CIRCLE_BUILD_NUM`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{ user `build_region` }}",
      "instance_type": "{{ user `instance_type` }}",
      "spot_price_auto_product": "Linux/UNIX (Amazon VPC)",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "CIS Ubuntu Linux 16.04 LTS Benchmark v1.0.0.2 - Level 1*",
          "root-device-type": "ebs"
        },
        "most_recent": true
      },

      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 8,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "ssh_username": "ubuntu",
      "run_tags": {
        "Name": "Packer build {{ user `build` }} for CIS Marketplace {{ user `os` }} Level 1 hardened image",
        "Project": "ami-cis-ubuntu-marketplace-build",
        "purpose": "demo standard pipeline for ami artifact build",
        "os": "{{ user `os` }}"
      },
      "run_volume_tags": {
        "Name": "Packer build {{ user `build` }} for CIS Marketplace {{ user `os` }} Level 1 hardened image",
        "Project": "ami-cis-ubuntu-marketplace-build",
        "purpose": "demo standard pipeline for ami artifact build",
        "os": "{{ user `os` }}"
      },
      "ami_name": "CIS {{ user `os` }} Marketplace Build {{ user `build` }}",
      "ami_regions": "{{ user `deploy_regions` }}",
      "ami_users": "{{ user `aws_accounts` }}",
      "tags": {
        "Name": "marketplace_cis_ubuntu.v{{ user `source_version` }}.{{ user `build` }}",
        "OS_Version": "{{ user `os` }}",
        "source_ami": "{{ .SourceAMI }}",
        "build_time": "{{timestamp}}",
        "build_version": "{{ user `source_version` }}.{{ user `build` }}"

      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo echo {{ user `source_version` }}.{{ user `build` }}.1 > ~/build_version",
        "sudo chmod 640 ~/build_version"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "cis_image_manifest.json",
      "strip_path": true
    }
  ]
}
