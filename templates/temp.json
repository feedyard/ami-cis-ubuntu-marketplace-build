{
  "variables": {
    "organization": "{{env `ORGANIZATION`}}",
    "os": "{{env `OS`}}",
    "build_region": "{{env `BUILD_REGION`}}",
    "instance_type": "{{env `INSTANCE_TYPE`}}",
    "deploy_regions": "{{env `DEPLOY_REGIONS`}}",
    "aws_accounts": "{{env `AWS_ACCOUNTS`}}",
    "source_version": "{{env `SOURCE_VERSION`}}",
    "build": "{{env `CIRCLE_BUILD_NUM`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{ user `build_region` }}",
      "spot_price_auto_product": "Linux/UNIX (Amazon VPC)",
      "instance_type": "{{ user `instance_type` }}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "CIS {{ user `os` }} Benchmark v1.0.0.2 - Level 1*",
          "root-device-type": "ebs"
        },
        "most_recent": true
      },

      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 8,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "ssh_username": "ubuntu",
      "run_tags": {
        "Name": "Packer build {{ user `build` }} for CIS {{ user `os` }} Marketplace Level 1 hardened image",
        "Project": "ami-cis-ubuntu-marketplace-build",
        "purpose": "demo standard pipeline for ami artifact build",
        "os": "{{ user `os` }}"
      },
      "run_volume_tags": {
        "Name": "Packer build {{ user `build` }} for CIS {{ user `os` }} Marketplace Level 1 hardened image",
        "Project": "ami-cis-ubuntu-marketplace-build",
        "purpose": "demo standard pipeline for ami artifact build",
        "os": "{{ user `os` }}"
      },
      "ami_name": "{{ user `organization` }} CIS {{ user `os` }} Marketplace Level 1 Build {{ user `build` }}",
      "ami_regions": "{{ user `deploy_regions` }}",
      "ami_users": "{{ user `aws_accounts` }}",
      "tags": {
        "Name": "cis_marketplace.v{{ user `source_version` }}.{{ user `build` }}",
        "OS_Version": "{{ user `os` }}",
        "build_version": "{{ user `source_version` }}.{{ user `build` }}",
        "source_ami": "{{ .SourceAMI }}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": ["sleep 180"]
    },
    {
      "type": "shell",
      "inline": ["sudo pam-auth-update --package --force"]
    },
    {
      "type": "shell",
      "inline": ["sudo apt-get -y -o Dpkg::Options::='--force-confdef' -o Dpkg::Options::='--force-confold' dist-upgrade"],
      "environment_vars": ["DEBIAN_FRONTEND=noninteractive"]
    },
    {
      "type": "shell",
      "inline": ["sudo apt-get -y auto-remove"]
    },
    {
      "type": "shell",
      "script": "packer_build_stage_one.sh"
    },
    {
      "type": "shell",
      "inline": [
        "sudo echo cis.{{ user `source_version` }}.{{ user `build` }} > ~/build_version",
        "sudo chmod 640 ~/build_version"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "cis_image_manifest.json",
      "strip_path": true
    }
  ]
}