{
  "variables": {
    "organization": "feedyard",
    "os": "Ubuntu 1604LTS",
    "build_region": "us-east-1",
    "instance_type": "t2.medium",
    "deploy_regions": "us-east-1",
    "aws_accounts": "538257557236,151701496001,750464328775",
    "source_version": "1.0.0.2",
    "build": "24"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{ user `build_region` }}",
      "instance_type": "{{ user `instance_type` }}",
      "spot_price_auto_product": "Linux/UNIX (Amazon VPC)",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "CIS Ubuntu Linux 16.04 LTS Benchmark v1.0.0.2 - Level 1*",
          "root-device-type": "ebs"
        },
        "most_recent": true
      },

      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 8,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "ssh_username": "ubuntu",
      "run_tags": {
        "Name": "Packer build {{ user `build` }} for CIS Marketplace {{ user `os` }} Level 1 hardened image",
        "Project": "ami-cis-ubuntu-marketplace-build",
        "purpose": "demo standard pipeline for ami artifact build",
        "os": "{{ user `os` }}"
      },
      "run_volume_tags": {
        "Name": "Packer build {{ user `build` }} for CIS Marketplace {{ user `os` }} Level 1 hardened image",
        "Project": "ami-cis-ubuntu-marketplace-build",
        "purpose": "demo standard pipeline for ami artifact build",
        "os": "{{ user `os` }}"
      },
      "ami_name": "{{ user `organization` }} CIS {{ user `os` }} Level 1 {{timestamp}} Build {{ user `build` }}",
      "ami_regions": "{{ user `deploy_regions` }}",
      "ami_users": "{{ user `aws_accounts` }}",
      "tags": {
        "Name": "{{ user `organization` }}_cis_ubuntu.v{{ user `source_version` }}.{{ user `build` }}",
        "OS_Version": "{{ user `os` }}",
        "build_version": "{{ user `source_version` }}.{{ user `build` }}",
        "source_ami": "{{ .SourceAMI }}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": ["sudo touch /etc/growroot-disabled"]
    },
    {
      "type": "shell",
      "inline": [
        "sudo echo {{ user `source_version` }}.{{ user `build` }} > ~/build_version",
        "sudo chmod 640 ~/build_version"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "cis_image_manifest.json",
      "strip_path": true
    }
  ]
}
